<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lauden.calcfragment.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center" />


        <TextView
            android:id="@+id/resultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resultat"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow android:layout_weight="3">

                <Button
                    android:id="@+id/neuf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/huit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>


                <Button
                    android:id="@+id/sept"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>
            </TableRow>
            <TableRow android:layout_weight="3">

                <Button
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/cinq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/quatre"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>
            </TableRow>
            <TableRow android:layout_weight="3">

                <Button
                    android:id="@+id/trois"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/deux"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="30sp"
                    android:onClick="addToOperation" />

                <Button
                    android:id="@+id/un"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>
            </TableRow>
            <TableRow android:layout_weight="3">

                <Button
                    android:id="@+id/multiplie"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/divise"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="/"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>
            </TableRow>
            <TableRow android:layout_weight="2">

                <Button
                    android:id="@+id/addition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="+"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>

                <Button
                    android:id="@+id/soustraction"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="-"
                    android:textSize="30sp"
                    android:onClick="addToOperation"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/somme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="="
            android:textSize="30sp"
            android:onClick="addToOperation"/>


    </LinearLayout>
</LinearLayout>